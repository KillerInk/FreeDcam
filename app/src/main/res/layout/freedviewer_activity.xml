<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/freedviewer_gridviewholder">

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="freed.viewer.gridview.views.GridViewFragment"
            android:id="@+id/freedviewer_gridview"
            tools:layout="@layout/freedviewer_gridviewfragment" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/freedviewer_screenslideholder">

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="freed.viewer.screenslide.ScreenSlideFragment"
            android:id="@+id/freedviewer_screenslide_fragment"
            tools:layout="@layout/freedviewer_screenslide_fragment" />
    </FrameLayout>
</RelativeLayout>