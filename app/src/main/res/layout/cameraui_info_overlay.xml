<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="infoOverlayModel"
            type="freed.cam.ui.themesample.cameraui.model.InfoOverlayModel" />
    </data>


<LinearLayout
android:orientation="horizontal"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentLeft="false"
android:layout_alignParentEnd="true"
android:layout_alignParentRight="true"
android:layout_marginRight="@dimen/cameraui_shuttericon_size"
android:layout_alignParentStart="false"
android:background="#75000000">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/textView_time"
    android:textSize="@dimen/cameraui_infooverlay_textsize"
    android:textColor="#ffffff"
    android:visibility="visible"
    android:shadowColor="#000000"
    android:elevation="2dp"
    android:background="#02000000"
    android:paddingLeft="5dp"
    android:text="@{infoOverlayModel.time}" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/textView_format"
    android:textSize="@dimen/cameraui_infooverlay_textsize"
    android:layout_marginLeft="@dimen/cameraui_infooverlay_textmargin"
    android:textColor="#ffffff"
    android:visibility="gone"
    android:shadowColor="#000000"
    android:elevation="2dp"
    android:background="#02000000"
    android:paddingLeft="5dp"
    android:text=" " />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/textView_size"
    android:textSize="@dimen/cameraui_infooverlay_textsize"
    android:layout_marginLeft="@dimen/cameraui_infooverlay_textmargin"
    android:textColor="#ffffff"
    android:shadowColor="#000000"
    android:elevation="2dp"
    android:background="#02000000"
    android:paddingLeft="5dp"
    android:text="@{infoOverlayModel.size}"
    android:visibility="visible" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/textView_storage"
    android:textSize="@dimen/cameraui_infooverlay_textsize"
    android:layout_marginLeft="@dimen/cameraui_infooverlay_textmargin"
    android:textColor="#ffffff"
    android:shadowColor="#000000"
    android:elevation="2dp"
    android:background="#02000000"
    android:paddingLeft="5dp"
    android:text="@{infoOverlayModel.storageSpace}"
    android:visibility="visible" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/textView_battery"
    android:textSize="@dimen/cameraui_infooverlay_textsize"
    android:layout_marginLeft="@dimen/cameraui_infooverlay_textmargin"
    android:textColor="#ffffff"
    android:shadowColor="#000000"
    android:elevation="2dp"
    android:background="#02000000"
    android:paddingLeft="5dp"
    android:text="@{infoOverlayModel.batteryLvl}"
    android:visibility="visible" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/textView_dngsupported"
    android:textSize="@dimen/cameraui_infooverlay_textsize"
    android:layout_marginLeft="@dimen/cameraui_infooverlay_textmargin"
    android:textColor="#ffffff"
    android:shadowColor="#000000"
    android:elevation="2dp"
    android:background="#02000000"
    android:paddingLeft="5dp"
    android:text=" "
    android:visibility="gone" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/textView_buildmodel"
    android:textSize="@dimen/cameraui_infooverlay_textsize"
    android:layout_marginLeft="@dimen/cameraui_infooverlay_textmargin"
    android:textColor="#ffffff"
    android:shadowColor="#000000"
    android:elevation="2dp"
    android:background="#02000000"
    android:paddingLeft="5dp"
    android:text=" "
    android:visibility="gone" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/textView_appversion"
    android:textSize="@dimen/cameraui_infooverlay_textsize"
    android:layout_marginLeft="@dimen/cameraui_infooverlay_textmargin"
    android:textColor="#ffffff"
    android:shadowColor="#000000"
    android:elevation="2dp"
    android:background="#02000000"
    android:paddingLeft="5dp"
    android:text=" "
    android:visibility="gone" />
</LinearLayout>

</layout>