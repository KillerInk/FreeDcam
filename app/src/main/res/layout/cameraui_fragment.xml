<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/guideHolder"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/horHolder"></LinearLayout>


    <freed.cam.ui.themesample.cameraui.FocusSelector
        android:layout_width="70dp"
        android:id="@+id/imageView_Crosshair"
        android:visibility="gone"
        android:layout_height="70dp" />
        android:layout_height="70dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView_meteringarea"
        android:background="@drawable/exposure_metering"
        android:visibility="gone" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageViewFocusClose"
        android:background="@drawable/focusclose"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/cameraui_settings_margin_right"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/cameraui_settings_margin_right" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/cameraui_shuttericon_size"
        android:layout_alignParentStart="false"
        android:background="#75000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView_time"
            android:textSize="@dimen/cameraui_infooverlay_textsize"
            android:textColor="#ffffff"
            android:visibility="visible"
            android:shadowColor="#000000"
            android:elevation="2dp"
            android:background="#02000000"
            android:paddingLeft="5dp"
            android:text=" " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView_format"
            android:textSize="@dimen/cameraui_infooverlay_textsize"
            android:layout_marginLeft="@dimen/cameraui_infooverlay_textmargin"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:shadowColor="#000000"
            android:elevation="2dp"
            android:background="#02000000"
            android:paddingLeft="5dp"
            android:text=" " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView_size"
            android:textSize="@dimen/cameraui_infooverlay_textsize"
            android:layout_marginLeft="@dimen/cameraui_infooverlay_textmargin"
            android:textColor="#ffffff"
            android:shadowColor="#000000"
            android:elevation="2dp"
            android:background="#02000000"
            android:paddingLeft="5dp"
            android:text=" "
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView_storage"
            android:textSize="@dimen/cameraui_infooverlay_textsize"
            android:layout_marginLeft="@dimen/cameraui_infooverlay_textmargin"
            android:textColor="#ffffff"
            android:shadowColor="#000000"
            android:elevation="2dp"
            android:background="#02000000"
            android:paddingLeft="5dp"
            android:text=" "
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView_battery"
            android:textSize="@dimen/cameraui_infooverlay_textsize"
            android:layout_marginLeft="@dimen/cameraui_infooverlay_textmargin"
            android:textColor="#ffffff"
            android:shadowColor="#000000"
            android:elevation="2dp"
            android:background="#02000000"
            android:paddingLeft="5dp"
            android:text=" "
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView_dngsupported"
            android:textSize="@dimen/cameraui_infooverlay_textsize"
            android:layout_marginLeft="@dimen/cameraui_infooverlay_textmargin"
            android:textColor="#ffffff"
            android:shadowColor="#000000"
            android:elevation="2dp"
            android:background="#02000000"
            android:paddingLeft="5dp"
            android:text=" "
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView_buildmodel"
            android:textSize="@dimen/cameraui_infooverlay_textsize"
            android:layout_marginLeft="@dimen/cameraui_infooverlay_textmargin"
            android:textColor="#ffffff"
            android:shadowColor="#000000"
            android:elevation="2dp"
            android:background="#02000000"
            android:paddingLeft="5dp"
            android:text=" "
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView_appversion"
            android:textSize="@dimen/cameraui_infooverlay_textsize"
            android:layout_marginLeft="@dimen/cameraui_infooverlay_textmargin"
            android:textColor="#ffffff"
            android:shadowColor="#000000"
            android:elevation="2dp"
            android:background="#02000000"
            android:paddingLeft="5dp"
            android:text=" "
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/menuBackgColor"
        android:layout_centerInParent="true"
        android:id="@+id/userMessageHolder">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView_usermessage"
            android:textColor="@color/menuTextColor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/left_ui_holder"
        android:layout_width="@dimen/cameraui_settingschild_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="vertical">


    </LinearLayout>



    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="@dimen/cameraui_shuttericon_size"
        android:layout_height="match_parent"
        android:id="@+id/right_ui_holder"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/right_ui_holder_top">

                <freed.cam.ui.themesample.cameraui.childs.UiSettingsFocusPeak
                    android:layout_width="@dimen/ui_settings_item_width"
                    android:layout_height="@dimen/ui_settings_item_height"
                    android:id="@+id/ui_focuspeak"
                    app:HeaderText="@string/setting_focuspeak_header"
                    android:background="@drawable/quck_set_zebra"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>

        <freed.cam.ui.themesample.cameraui.ShutterButton
            android:layout_width="@dimen/cameraui_shuttericon_size"
            android:layout_height="@dimen/cameraui_shuttericon_size"
            android:id="@+id/shutter_button"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center|center_horizontal|bottom">

            <freed.cam.ui.themesample.cameraui.childs.UiSettingsChildSelfTimer
                android:layout_width="@dimen/ui_settings_item_height"
                android:layout_height="@dimen/ui_settings_item_height"
                android:id="@+id/selftimer"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selftimer"
                android:layout_marginTop="18dp"/>


            <freed.cam.ui.themesample.cameraui.childs.UiSettingsChildAeLock
                android:layout_width="@dimen/ui_settings_item_width"
                android:layout_height="@dimen/ui_settings_item_height"
                android:id="@+id/ae_lock"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/quck_set_ae_lock"
                android:layout_marginTop="5dp"/>

            <freed.cam.ui.themesample.cameraui.childs.UiSettingsChildCameraSwitch
                android:layout_width="@dimen/ui_settings_item_width"
                android:layout_height="@dimen/ui_settings_item_height"
                android:id="@+id/camera_switch"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/quck_set_cswitch"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/manualModesHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/cameraui_manualbuttonholder_margin_left"
        android:layout_marginRight="@dimen/cameraui_manualbuttonholder_margin_right"
        android:foregroundGravity="center_horizontal"></FrameLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cameraui_values_fragment_holder"
        android:layout_marginLeft="@dimen/cameraui_settings_margin_left"
        android:layout_marginRight="@dimen/cameraui_shuttericon_size"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"></FrameLayout>

    <view
        android:layout_width="@dimen/image_thumbnail_size"
        android:layout_height="@dimen/image_thumbnail_size"
        class="freed.cam.apis.sonyremote.parameters.JoyPad"
        android:id="@+id/joypad"
        android:focusable="true"
        android:layout_marginLeft="@dimen/cameraui_manualbuttonholder_margin_left"
        android:layout_centerInParent="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/cameraui_manualbuttonholder_height"
        android:clickable="true"
        android:focusableInTouchMode="true" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/helpfragment_container"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </FrameLayout>


</RelativeLayout>
