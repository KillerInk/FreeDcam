            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/videosettings">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/setting_video_group_header"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:layout_marginBottom="1dp" />

                <troop.com.themesample.views.menu.MenuItemVideoProfile
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemVideoProfile"
                    app:Description="@string/setting_videoprofile_description"
                    app:HeaderText="@string/setting_videoprofile_header"
                    app:ValueText="1080p"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp" />

                <troop.com.themesample.views.menu.MenuItemVideoHDR
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemVideHDR"
                    app:Description="@string/setting_videohdr_description"
                    app:HeaderText="@string/setting_videohdr_header"
                    app:ValueText="OFF"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp" />

                <troop.com.themesample.views.menu.MenuItemHighFramerateVideo
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemHighFramerateVideo"
                    app:Description="@string/setting_videohfr_description"
                    app:HeaderText="@string/setting_videohfr_header"
                    app:ValueText="OFF"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp" />

                <troop.com.themesample.views.menu.MenuItem
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemHighSpeedVideo"
                    app:Description="@string/setting_videohsr_description"
                    app:HeaderText="@string/setting_videohsr_header"
                    app:ValueText="OFF"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp" />

                <troop.com.themesample.views.menu.MenuItemVideoBitrate
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:Description="@string/setting_videobitrate_description"
                    app:HeaderText="@string/setting_videobitrate_header"
                    app:ValueText="Profile Default"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp"
                    android:id="@+id/MenuItemVideoBitrate" />

                <troop.com.themesample.views.menu.MenuItem
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemVideoStabilization"
                    app:Description="@string/setting_vs_description"
                    app:HeaderText="@string/setting_vs_header"
                    app:ValueText=""
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp" />

                <troop.com.themesample.views.menu.MenuItem
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemVideoSize"
                    app:Description=""
                    app:HeaderText="VideoSize:"
                    app:ValueText=""
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp" />

                <troop.com.themesample.views.menu.MenuItem
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemPreviewSize"
                    app:Description=""
                    app:HeaderText="PreviewSize:"
                    app:ValueText=""
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="3dp" />
                <troop.com.themesample.views.menu.MenuItem
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemPreviewFormat"
                    app:Description=""
                    app:HeaderText="PreviewFormat:"
                    app:ValueText=""
                    android:layout_marginBottom="1dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/timelapse_frames"
                    android:id="@+id/textView14"
                    android:textColor="#000000"
                    android:background="#f4f4f4" />

                <troop.com.themesample.views.menu.MenuItemTimeLapseFrames
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemTimeLapseFrame"

                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/picsettings">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/setting_picture_group_header"
                    android:id="@+id/textView4"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp" />

                <troop.com.themesample.views.menu.MenuItem
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemPicSize"
                    app:Description="@string/setting_picturesize_description"
                    app:HeaderText="@string/setting_picturesize_header"
                    app:ValueText="1920x1080"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp" />

                <troop.com.themesample.views.menu.MenuItem
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemJpegQuality"
                    app:Description="@string/setting_jpegquality_description"
                    app:HeaderText="@string/setting_jpegquality_header"
                    app:ValueText="80"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp" />

                <!--<troop.com.themesample.views.menu.MenuItemBayerFormat
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemBayerFormat"
                    app:Description="@string/setting_bayerformat_description"
                    app:HeaderText="@string/setting_bayerformat_header"
                    app:ValueText="bayer-mipi"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp" />-->

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/setting_hdr_"
                    android:id="@+id/textView5"
                    android:textColor="#000000"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:background="#f4f4f4" />

                <troop.com.themesample.views.menu.MenuItemAEB
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemAEB1"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp" />

                <troop.com.themesample.views.menu.MenuItemAEB
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemAEB2"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp" />

                <troop.com.themesample.views.menu.MenuItemAEB
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemAEB3"
                    android:layout_marginBottom="1dp"
