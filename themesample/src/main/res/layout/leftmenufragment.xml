                    android:layout_marginRight="0dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/setting_Automation"
                    android:id="@+id/textView13"
                    android:textColor="#000000"
                    android:background="#f4f4f4"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp" />

                <troop.com.themesample.views.menu.MenuItemIntervalDuration
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuIntervalmeterDuration"
                    app:Description="@string/setting_interval_duration_header"
                    app:HeaderText="@string/setting_interval_duration_text"
                    app:ValueText="off"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp" />

                <troop.com.themesample.views.menu.MenuItemInterval
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuIntervalmeter"
                    app:Description="@string/setting_interval_header"
                    app:HeaderText="@string/setting_interval_texter"
                    app:ValueText="off"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp" />

                <troop.com.themesample.views.menu.MenuItemTimer
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuTimer"
                    app:Description="@string/setting_timer_header"
