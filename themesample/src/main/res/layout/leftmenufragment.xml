                    android:layout_marginRight="0dp" />

                <troop.com.themesample.views.menu.MenuItemSDSave
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemSDSave"
                    app:Description="@string/setting_sdcard_description"
