<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/close_button"
            android:layout_width="@dimen/cameraui_button_width"
            android:layout_height="@dimen/cameraui_button_height"
            android:background="@mipmap/quck_set_exit"
            app:backgroundTint="@color/black" />

        <Button
            android:id="@+id/moduleswitch_button"
            android:layout_width="@dimen/cameraui_button_width"
            android:layout_height="@dimen/cameraui_button_height"
            android:background="@mipmap/quck_set_mode"
            app:backgroundTint="@color/black" />

        <Button
            android:id="@+id/focuspeak_button"
            android:layout_width="@dimen/cameraui_button_width"
            android:layout_height="@dimen/cameraui_button_height"
            android:background="@mipmap/quck_set_zebra"
            app:backgroundTint="@color/black" />

    </LinearLayout>

    <Button
        android:id="@+id/shutter_button"
        android:layout_width="@dimen/cameraui_shutterbutton_size"
        android:layout_height="@dimen/cameraui_shutterbutton_size"
        android:layout_weight="1"
        android:background="@mipmap/shutter"
        app:backgroundTint="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/selftimer_button"
            android:layout_width="@dimen/cameraui_button_width"
            android:layout_height="@dimen/cameraui_button_width"
            android:background="@mipmap/selftimer"
            app:backgroundTint="@color/black" />

        <Button
            android:id="@+id/aelock_button"
            android:layout_width="@dimen/cameraui_button_width"
            android:layout_height="@dimen/cameraui_button_height"
            android:background="@mipmap/quck_set_ae_lock"
            app:backgroundTint="@color/black" />

        <Button
            android:id="@+id/camera_switch_button"
            android:layout_width="@dimen/cameraui_button_width"
            android:layout_height="@dimen/cameraui_button_height"
            android:background="@mipmap/quck_set_cswitch"
            app:backgroundTint="@color/black" />
    </LinearLayout>
</LinearLayout>