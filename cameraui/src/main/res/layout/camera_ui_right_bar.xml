<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable
    name="shutterButtonModel"
    type="com.troop.freedcam.cameraui.models.ShutterButtonModel" />
</data>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.troop.freedcam.cameraui.views.ManualButton
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:setImageToView="@mipmap/quck_set_exit"
            app:backgroundTint="@color/black" />

        <com.troop.freedcam.cameraui.views.ManualButton
            android:id="@+id/moduleswitch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:setImageToView="@mipmap/quck_set_mode"
            app:backgroundTint="@color/black" />

        <com.troop.freedcam.cameraui.views.ManualButton
            android:id="@+id/focuspeak_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:setImageToView="@mipmap/quck_set_zebra"
            app:backgroundTint="@color/black" />

    </LinearLayout>

    <Button
        android:id="@+id/shutter_button"
        android:layout_width="@dimen/cameraui_shutterbutton_size"
        android:layout_height="@dimen/cameraui_shutterbutton_size"
        android:layout_weight="1"
        android:visibility="@{shutterButtonModel.visibility}"
        android:background="@mipmap/shutter"
        app:backgroundTint="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <com.troop.freedcam.cameraui.views.ManualButton
            android:id="@+id/selftimer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:setImageToView="@mipmap/selftimer"
            app:backgroundTint="@color/black" />

        <com.troop.freedcam.cameraui.views.ManualButton
            android:id="@+id/aelock_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:setImageToView="@mipmap/quck_set_ae_lock"
            app:backgroundTint="@color/black" />

        <com.troop.freedcam.cameraui.views.ManualButton
            android:id="@+id/camera_switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:setImageToView="@mipmap/quck_set_cswitch"
            app:backgroundTint="@color/black" />
    </LinearLayout>
</LinearLayout>
</layout>